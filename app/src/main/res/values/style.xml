<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.FullScreen.Dialog" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_show</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <!--========Line============-->
    <style name="AppTheme.Line">
        <item name="android:background">@color/gray07</item>
    </style>

    <style name="AppTheme.Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.Line.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Line.Vertical.Title">
        <item name="android:layout_width">5dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ClickableView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--============= Declare style TextAppearance =============-->
    <style name="AppTheme.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextAppearance.Regular" parent="AppTheme.TextAppearance" />

    <style name="TextAppearance.Bold" parent="AppTheme.TextAppearance">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextAppearance.Italic" parent="AppTheme.TextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.BoldItalic" parent="AppTheme.TextAppearance">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!--============= Declare style Edit Text =============-->
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:background">@drawable/bg_view_stroke</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    // need to set maxline
    <style name="AppTheme.EditText.MultiLine" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:gravity">start</item>
        <item name="android:minLines">3</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppTheme.EditText.SignUp" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray18</item>
        <item name="android:backgroundTint">@color/gray06</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/radius_default</item>
    </style>

    <style name="AppTheme.Button.Responsive">
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:minHeight">@dimen/height_of_edit_text</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AppTheme.Button.Outline.Circle" paret="AppTheme.Button.Outline">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppTheme.Button.Circle
        </item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray02</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/gray03</item>
    </style>

    <style name="ShapeAppearanceOverlay.AppTheme.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>



    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:drawablePadding">@dimen/size_8</item>
    </style>

    <style name="AppTheme.TextView.Title">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView.Medium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="AppTheme.TextView.MultiLine" parent="AppTheme.TextView">
        <item name="android:maxLines">5</item>
        <item name="android:minLines">3</item>
        <item name="android:ellipsize">@null</item>
    </style>

    <style name="AppTheme.TextViewResponsive">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:drawablePadding">@dimen/size_8</item>
    </style>

    <style name="AppTheme.TextView.SemiBold">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="AppTheme.TextView.Title.Small">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="AppTheme.TextView.Italic">
        <item name="fontFamily">@font/montserrat_italic</item>
    </style>

    <style name="AppTheme.ButtonDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_button</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/button_orange_corner</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/radius_default</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:drawablePadding">@dimen/size_8</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="AppTheme.ButtonDefault.Small">
        <item name="android:layout_height">@dimen/size_40</item>
    </style>

    <style name="AppTheme.ButtonDefault.Responsive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.ButtonDefault.Wrap" >
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingEnd">@dimen/size_5</item>
        <item name="android:paddingStart">@dimen/size_5</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="roundedImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTheme.RatingBar">
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="AppTheme.RatingBar.Small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="OTPView">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@drawable/bg_otp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginTop">@dimen/size_10</item>
    </style>

    <style name="AppTheme.Button.NoAnimator" parent="AppTheme.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppDesign.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.RatingBar.Small.Feedback" parent="AppTheme.RatingBar.Small">
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppDesign.CheckBox.Default" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red_240</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="AppTheme.RatingBar.Grey" parent="AppTheme.RatingBar">
        <item name="colorControlNormal">@color/gray</item>
    </style>
    <style name="rounded_corner_10">
        <item name="cornerSize">10dp</item>
    </style>
</resources>