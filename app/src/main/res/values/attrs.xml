<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="android:text" format="string" />
        <attr name="android:textColor" format="color" />
        <attr name="android:background" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotateLoadingView">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>
    <declare-styleable name="AppImageView">
        <attr name="imgRoundCorners" format="dimension" />
        <attr name="imgCircle" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="SearchFilterView">
        <attr name="android:hint" format="string"/>
        <attr name="isEnableFilter" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PasswordLayout">
        <attr name="hint" format="string" />
    </declare-styleable>

    <declare-styleable name="BusinessHourView">
        <attr name="date" format="enum" >
            <enum name = "sunday" value="0"/>
            <enum name = "monday" value="1"/>
            <enum name = "tuesday" value="2"/>
            <enum name = "wednesday" value="3"/>
            <enum name = "thursday" value="4"/>
            <enum name = "friday" value="5"/>
            <enum name = "saturday" value="6"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AppSpinner">
        <attr name="android:entries" />
    </declare-styleable>

    <style name="AppDatePickerCalendarDialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <declare-styleable name="PasswordTextInputLayout">
        <attr name="iconColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SalonServiceView">
        <attr name="custom_display_type" format="enum" >
            <enum name = "TypeService" value="0"/>
            <enum name = "OneService" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingImageView">
        <attr name="custom_enable_remove_image" format="boolean" />

    </declare-styleable>

    <declare-styleable name="SpannedTextView">
        <attr name="spannedText" format="string" />
        <attr name="spannedAnchorColor" format="color" />
        <attr name="underlineAll" format="boolean" />
        <attr name="underlineSpannedText" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PasswordLayout2">
        <attr name="iconColorr" format="color" />
    </declare-styleable>

    <string-array name="voucher_customer_type">
        <item>@string/select_customer_type</item>
        <item>@string/voucher_customer_all</item>
        <item>@string/voucher_customer_normal</item>
        <item>@string/voucher_customer_vip</item>
    </string-array>

    <declare-styleable name="CustomEditText">
        <attr name="android:hint" format="string"/>
        <attr name="custom_end_text" format="string"/>
        <attr name="custom_start_text" format="string"/>
        <attr name="max_number_input" format="float"/>
        <attr name="input_type" format="enum">
            <enum name="number" value="0"/>
            <enum name="decimal" value="1"/>
        </attr>
    </declare-styleable>

</resources>