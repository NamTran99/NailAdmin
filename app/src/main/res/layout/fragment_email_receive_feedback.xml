<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray07"
    tools:context=".views.me.ChangePasswordFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/size_10"
        android:background="@drawable/bg_white_radius"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_15"
        android:paddingTop="@dimen/size_24"
        android:paddingBottom="@dimen/size_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_28"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/AppTheme.TextView.Medium"
                android:text="@string/enter_your_email" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/size_12"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close" />

        </RelativeLayout>

        <TextView
            style="@style/AppTheme.TextViewResponsive"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/size_74"
            android:textColor="@color/text_hint_description"
            android:layout_marginBottom="@dimen/size_28"
            android:text="@string/email_receive_feedback_description" />

        <EditText
            android:id="@+id/etEnterEmail"
            style="@style/AppTheme.EditText"
            android:layout_marginBottom="@dimen/size_12"
            android:hint="@string/email"
            android:drawableStart="@drawable/ic_email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btSave"
            style="@style/AppTheme.ButtonDefault"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center"
            android:background="@drawable/button_blue_corner"
            android:text="@string/btn_save" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>