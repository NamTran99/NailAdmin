<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray07"
    tools:context=".views.me.ChangePasswordFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10"
        android:background="@drawable/bg_white_radius"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_15"
        android:paddingTop="@dimen/size_24"
        android:paddingBottom="@dimen/size_27">

        <TextView
            style="@style/AppTheme.TextView.Medium"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_28"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/your_email" />

        <TextView
            style="@style/AppTheme.TextViewResponsive"
            android:layout_marginHorizontal="@dimen/size_74"
            android:layout_marginBottom="@dimen/size_28"
            android:text="@string/email_receive_feedback_description"
            android:textAlignment="center"
            android:textColor="@color/text_hint_description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_5"
                android:drawablePadding="@dimen/size_13"
                android:text="@string/sample_gmail_com"
                app:drawableStartCompat="@drawable/ic_email" />

            <TextView
                style="@style/AppTheme.TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size_10"
                android:drawablePadding="@dimen/size_10"
                android:text="@string/edit"
                android:textColor="@color/colorPrimary"
                app:drawableStartCompat="@drawable/ic_edit_2" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>