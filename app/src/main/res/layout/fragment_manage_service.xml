<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray07"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/size_10"
    android:paddingVertical="@dimen/size_12"
    tools:context=".views.management.staff.ManageStaffFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAddAppointment"
        style="@style/AppTheme.ButtonDefault.Wrap"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@drawable/button_pink_corner"
        android:drawableStart="@drawable/ic_add"
        android:text="@string/btn_add_new_service" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvServices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>