<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.TextViewResponsive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:text="@string/label_empty_data"
    android:textColor="@color/text_desc_color">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                style="@style/AppTheme.TextView.Medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:text="Monday"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/tvStatus"
                style="@style/AppTheme.TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_white"
                android:layout_weight="0"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:textColor="@color/blue_40"
                tools:targetApi="o"
                tools:text="Open" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_5"
                android:layout_marginTop="@dimen/size_10"
                android:layout_weight="1"
                android:background="@drawable/bg_view_stroke"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvv"
                    style="@style/AppTheme.TextView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_weight="0"
                    android:text="@string/from"
                    android:textColor="#B2B2B2" />

                <TextView
                    android:id="@+id/tvFromTime"
                    android:layout_width="wrap_content"
                    style="@style/AppTheme.TextViewResponsive"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/size_15"
                    android:paddingVertical="@dimen/size_18"
                    android:text="@string/label_select_time" />

                <TextView
                    style="@style/AppTheme.TextView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/to"
                    android:textColor="#B2B2B2" />

                <TextView
                    android:id="@+id/tvTotime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AppTheme.TextViewResponsive"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/size_15"
                    android:paddingVertical="@dimen/size_18"
                    android:text="@string/label_select_time" />

                <TextView
                    android:id="@+id/btnReset"
                    style="@style/AppTheme.TextView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_10"
                    android:layout_weight="0"
                    android:text="@string/btn_delete"
                    android:textColor="@color/red"
                    android:visibility="gone" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>