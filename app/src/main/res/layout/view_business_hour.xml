<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvEmptyData"
    style="@style/AppTheme.TextViewResponsive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:text="@string/label_empty_data"
    android:textColor="@color/text_desc_color">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            style="@style/AppTheme.TextView.Medium"
            android:layout_width="@dimen/size_70"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:autoSizeMaxTextSize="@dimen/text_size_12"
            android:autoSizeMinTextSize="@dimen/text_size_8"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Monday"
            tools:targetApi="o" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_5"
            android:layout_weight="1"
            android:background="@drawable/bg_view_stroke"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFromTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_15"
                android:paddingVertical="@dimen/size_18"
                android:text="@string/label_select_time" />

            <TextView
                style="@style/AppTheme.TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/to"
                android:textColor="#B2B2B2" />

            <TextView
                android:id="@+id/tvTotime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="@dimen/size_15"
                android:paddingVertical="@dimen/size_18"
                android:text="@string/label_select_time" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16"
            android:layout_weight="0"
            android:background="@null"
            android:src="@drawable/ic_reset_time" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>