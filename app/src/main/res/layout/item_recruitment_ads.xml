<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAds1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_10"
    android:layout_marginRight="@dimen/size_10">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThumbnailPost1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_guidance"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatusPost1"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/orange"
                android:paddingLeft="@dimen/size_5"
                android:paddingRight="@dimen/size_5"
                android:text="@string/text_new"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_8" />

            <TextView
                android:id="@+id/tvTimePost1"

                style="@style/AppTheme.TextViewResponsive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/text_loading"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_10"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvTitlePost1"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvTimePost1"
                android:layout_below="@+id/tvStatusPost1"
                android:layout_marginTop="@dimen/size_5"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="2"
                android:text="@string/text_loading"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescriptionPost1"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:ellipsize="end"
        android:maxLines="5"
        android:lines="5"
        android:text="@string/text_loading"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tvDistance1"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/size_3"
        android:text="@string/text_detail"
        android:layout_below="@+id/tvDescriptionPost1"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>

