<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_white"
    android:gravity="center"
    android:paddingTop="@dimen/size_20"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_marginStart="@dimen/size_8"
            android:background="@drawable/circle_gray_1"
            android:padding="@dimen/size_12"
            android:src="@drawable/ic_vietnam" />

        <TextView
            android:id="@+id/tvLanguage"
            style="@style/AppTheme.TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_check_outline"
            android:drawableTint="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_16"
            tools:text="Vietnamese" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_marginTop="@dimen/size_20"
        style="@style/AppTheme.Line.Horizontal"/>

</LinearLayout>
