<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_16"
    app:cardCornerRadius="@dimen/radius_default">

    <RelativeLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/size_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtBookingID"
            style="@style/TextAppearance.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelSalonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBookingID"
            android:layout_marginTop="@dimen/size_10"
            style="@style/AppTheme.TextViewResponsive"
            android:text="@string/label_salon_name"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSalonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelSalonName"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/labelSalonName"
            android:background="?selectableItemBackground"
            android:gravity="end"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="0dp"
            style="@style/AppTheme.TextViewResponsive"
            android:textColor="@color/colorAccent"
            tools:text="Healthy Nail Salon Collaborative" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSalonName"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/label_appointment_time"
            style="@style/AppTheme.TextViewResponsive"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextViewResponsive"
            android:layout_below="@+id/labelSalonName"
            android:layout_alignTop="@+id/labelDatetime"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/size_10"
            android:layout_toEndOf="@+id/labelDatetime"
            android:gravity="end"
            tools:text="Aug 23 2022 - 2:58 PM" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDatetime"
            android:layout_marginTop="@dimen/size_10"
            style="@style/AppTheme.TextViewResponsive"
            android:text="@string/label_services"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelService"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/labelService"
            style="@style/AppTheme.TextViewResponsive"
            android:gravity="end"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="0dp"
            tools:text="Manicure, Pedicure, Wax" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtService"
            android:layout_marginTop="@dimen/size_10"
            style="@style/AppTheme.TextViewResponsive"
            android:text="@string/label_request"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelRequest"
            style="@style/AppTheme.TextViewResponsive"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/labelRequest"
            android:gravity="end"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="0dp"
            tools:text="Johnson Champlin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelSomethingElse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRequest"
            android:layout_marginTop="@dimen/size_10"
            style="@style/AppTheme.TextViewResponsive"
            android:text="@string/hint_note"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSomethingElse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelSomethingElse"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/size_16"
            android:layout_toEndOf="@+id/labelSomethingElse"
            style="@style/AppTheme.TextViewResponsive"
            android:gravity="end"
            tools:text="@string/hint_note" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextViewResponsive"
            android:layout_below="@+id/txtSomethingElse"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/label_status"
            android:textColor="@color/gray_145" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelStatus"
            android:layout_alignParentEnd="true"
            android:drawablePadding="@dimen/size_10"
            style="@style/AppTheme.TextViewResponsive"
            tools:text="Waiting"
            tools:textColor="@color/yellow" />

        <FrameLayout
            android:id="@+id/totalAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelStatus"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextViewResponsive"
                android:text="@string/label_total_amount"
                android:textColor="@color/gray_145" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:text="$150.00" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCreateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalAmountLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/size_5"
            style="@style/AppTheme.TextViewResponsive"
            android:textColor="@color/gray_145"
            android:textSize="@dimen/text_size_12"
            android:textStyle="italic"
            tools:text="Aug 23 2022 - 2:58 PM" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cancelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCreateAt"
            android:layout_marginTop="@dimen/size_10"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <View style="@style/AppTheme.Line.Horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCancelBy"
                style="@style/TextAppearance.Italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                tools:text="Cancelled by Ken" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_below="@+id/txtCancelBy"
                android:layout_marginTop="@dimen/size_4"
                android:gravity="center"
                android:textColor="@color/gray_145"
                tools:text="Reason" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/noteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCreateAt"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical"
            android:visibility="gone">

            <View style="@style/AppTheme.Line.Horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@color/gray_145"
                tools:text="Note..." />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/feedbackLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteLayout"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone">

            <View style="@style/AppTheme.Line.Horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                style="@style/AppTheme.TextViewResponsive"
                android:text="@string/title_feed_back"
                android:textColor="@color/black" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:text="@string/title_feed_back"
                android:textColor="@color/black"
                android:theme="@style/AppTheme.RatingBar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFeedbackContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                style="@style/AppTheme.TextViewResponsive"
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@color/gray_145"
                tools:text="Waiting" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/finishLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedbackLayout"
            android:layout_marginVertical="@dimen/size_16"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeedback"
                style="@style/AppTheme.Button.NoAnimator"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="@dimen/size_16"
                android:layout_weight="1"
                android:minWidth="120dp"
                android:text="@string/btn_feedback"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/radius_40" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/AppTheme.Button.NoAnimator"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:text="@string/btn_delete"
                android:textAllCaps="false"
                app:backgroundTint="@color/red_240"
                app:cornerRadius="@dimen/radius_40" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/AppTheme.Button.NoAnimator"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/noteLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/size_16"
            android:minWidth="120dp"
            android:text="@string/btn_cancel"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cornerRadius="@dimen/radius_40" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDirect"
            style="@style/AppTheme.Button.NoAnimator"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/noteLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/size_16"
            android:minWidth="120dp"
            android:text="@string/btn_direction_to_salon"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cornerRadius="@dimen/radius_40"
            app:icon="@drawable/ic_direct"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/size_10" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>