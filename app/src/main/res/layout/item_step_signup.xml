<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_marginEnd="@dimen/size_10"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_4"
    android:minWidth="@dimen/size_80"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tvName"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        tools:text="Manicure Manicure Manicure Manicure Manicure Manicure Manicure Manicure" />

    <LinearLayout
        android:id="@+id/lvDisable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <View
            android:id="@+id/viewLine"
           style="@style/AppTheme.Line.Horizontal"
            android:layout_height="@dimen/size_4"
            android:layout_marginVertical="@dimen/size_10"
            />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="@dimen/size_30"
            android:layout_height="30dp"
            android:background="@drawable/box_white_radius_oval"
            android:gravity="center"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">
        <View
            style="@style/AppTheme.Line.Horizontal"
            android:layout_height="@dimen/size_4"
            android:background="@color/green"
            android:layout_marginVertical="@dimen/size_10"
            />

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:src="@drawable/ic_tick"/>
    </LinearLayout>

</LinearLayout>
