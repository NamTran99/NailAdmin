<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lvScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_15"
        android:paddingVertical="@dimen/size_16">

        <TextView
            style="@style/AppTheme.TextViewResponsive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_BE43C3"
            android:layout_gravity="center"
            android:text="@string/step_1_title" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtAccName"
            style="@style/AppTheme.EditText.SignUp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_10"
            android:drawableStart="@drawable/ic_user_outline"
            android:drawablePadding="@dimen/size_10"
            android:hint="@string/enter_owner_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtAccPhone"
            style="@style/AppTheme.EditText.SignUp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_10"
            android:drawableStart="@drawable/ic_phone_outline"
            android:drawablePadding="@dimen/size_8"
            android:hint="@string/login_phone_number"
            android:inputType="phone" />


        <com.app.inails.booking.admin.views.widget.PasswordTextInputLayout
            android:id="@+id/layoutPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/bg_bottom_light"
            app:iconColor="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAccPassword"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:background="@null"
                android:drawableStart="@drawable/ic_lock_outline"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/size_10" />

        </com.app.inails.booking.admin.views.widget.PasswordTextInputLayout>

        <Button
            android:id="@+id/btnContinue"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:textSize="@dimen/text_size_12"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_primary_corner_10"
            android:drawableEnd="@drawable/ic_arrow_right_1"
            android:drawableTint="@color/white"
            android:text="@string/btn_next" >
        </Button>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
