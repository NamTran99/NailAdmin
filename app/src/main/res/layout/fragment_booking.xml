<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray07"
    tools:context=".views.booking.BookingFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/appointTab"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="@dimen/size_13"
        android:layout_marginTop="@dimen/size_13"
        android:layout_marginEnd="@dimen/size_13"
        android:layout_marginBottom="@dimen/size_13"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TextAppearance.Bold"
        app:tabTextColor="@color/gray14" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appointTab"
        android:background="@color/gray07"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.inails.booking.admin.views.widget.SearchView
                android:id="@+id/searchView"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/size_13"
                android:drawableStart="@drawable/ic_search"
                android:drawableEnd="@null"
                android:hint="@string/hint_search_by_booking_id_customer_name_staff_name"
                android:imeOptions="actionSearch"
                android:longClickable="false"
                android:paddingEnd="90dp"
                android:textSize="@dimen/text_size_11" />

            <ImageButton
                android:id="@+id/btClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/filterLayout"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/size_10"
                android:visibility="gone"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filterLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size_13">

                <ImageButton
                    android:id="@+id/btFilter"
                    android:layout_width="@dimen/height_of_edit_text"
                    android:layout_height="@dimen/height_of_edit_text"
                    android:layout_marginEnd="@dimen/size_10"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="@dimen/size_10"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/size_10"
                    android:src="@drawable/circle_primary"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/viewRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray07">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/size_50"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_appointment" />

                <include
                    android:id="@+id/emptyLayout"
                    layout="@layout/layout_empty" />

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAddAppointment"
        style="@style/AppTheme.ButtonDefault.Wrap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@drawable/button_pink_corner"
        android:drawableStart="@drawable/ic_add"
        android:text="@string/btn_add_new_appointment" />
</RelativeLayout>
