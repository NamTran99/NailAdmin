<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_16"
    android:background="@drawable/box_grey"
    android:padding="@dimen/size_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelBookingID"
        android:layout_width="wrap_content"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_height="wrap_content"
        android:text="@string/label_booking_id"
        android:textColor="@color/gray_145" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtBookingID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelBookingID"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_alignParentEnd="true"
        tools:text="#123456" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelSalonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBookingID"
        android:layout_marginTop="@dimen/size_10"
        style="@style/AppTheme.TextViewResponsive"
        android:text="@string/label_salon_name"
        android:textColor="@color/gray_145" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSalonName"
        android:background="?selectableItemBackground"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelSalonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/labelSalonName"
        android:gravity="end"
        android:paddingStart="@dimen/size_16"
        android:paddingEnd="0dp"
        tools:text="Beauty Salon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_below="@+id/txtSalonName"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/label_client_name"
        android:textColor="@color/gray_145" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelClientName"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_alignParentEnd="true"
        tools:text="John Doe" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelClientName"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/label_phone_number"
        android:textColor="@color/gray_145" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelPhoneNumber"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_alignParentEnd="true"
        tools:text="987-654-3210" />

</RelativeLayout>