<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.management.service.ManageServiceFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/introSliderViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/btnSkipStart"
        android:background="@null"
        android:clipToPadding="false"
        app:tabBackground="@drawable/tab_selector_3"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSkipStart"
        style="@style/AppTheme.ButtonDefault"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_15"
        android:background="@drawable/button_f5f5f5_corner"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:textColor="@color/black"
        android:text="@string/skip" />

</RelativeLayout>