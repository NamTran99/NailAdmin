<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="@dimen/size_16"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvStaffName"
        style="@style/AppTheme.TextView.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Staff Name" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/AppTheme.TextView.Medium"
        android:textSize="@dimen/text_size_10"
        android:layout_marginTop="@dimen/size_8"
        app:drawableStartCompat="@drawable/circle_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStaffName"
        tools:text="Staff Name" />

    <TextView
        android:id="@+id/tvCustomerName"
        style="@style/AppTheme.TextView.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Customer Name" />

</androidx.constraintlayout.widget.ConstraintLayout>