<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/size_20"
    tools:context=".views.dialog.MessageDialog">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        style="@style/AppTheme.TextView.SemiBold"
        android:textSize="@dimen/text_size_16"
        android:text="@string/detail_service" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginHorizontal="@dimen/size_27"
        android:layout_marginTop="@dimen/size_17"
        android:background="@color/color_line" />

    <TextView
        style="@style/AppTheme.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginStart="@dimen/size_30"
        android:text="@string/service_name"
        android:textColor="@color/color_title_booking_list"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tvSvName"
        style="@style/AppTheme.TextViewResponsive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/size_10"
        android:textSize="@dimen/text_size_12"
        tools:text="ABC" />


    <TextView
        style="@style/AppTheme.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/size_15"
        android:text="@string/price"
        android:textColor="@color/color_title_booking_list"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tvSvPrice"
        style="@style/AppTheme.TextViewResponsive"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/size_10"
        android:textSize="@dimen/text_size_12"
        tools:text="$150" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btClose"
        style="@style/AppTheme.ButtonDefault"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/button_primary_corner"
        android:text="@string/btn_close"
        android:layout_marginHorizontal="@dimen/size_27"/>
</LinearLayout>