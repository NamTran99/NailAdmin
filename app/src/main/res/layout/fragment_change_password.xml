<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray07"
    tools:context=".views.me.reset.ResetPasswordFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/bg_white_radius"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_15"
        android:paddingTop="@dimen/size_24"
        android:paddingBottom="@dimen/size_16">


        <com.app.inails.booking.admin.views.widget.PasswordLayout
            android:id="@+id/edtOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_12"
            app:hint="@string/old_password" />

        <com.app.inails.booking.admin.views.widget.PasswordLayout
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_12"
            app:hint="@string/new_password" />

        <com.app.inails.booking.admin.views.widget.PasswordLayout
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_12"
            app:hint="@string/confirm_new_password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btUpdatePassword"
            style="@style/AppTheme.ButtonDefault"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center"
            android:background="@drawable/button_blue_corner"
            android:text="@string/update" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>