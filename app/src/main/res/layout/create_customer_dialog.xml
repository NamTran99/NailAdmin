<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/size_10"
    android:background="@drawable/bg_white_radius"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/size_15"
    android:paddingTop="@dimen/size_24"
    android:paddingBottom="@dimen/size_18">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/AppTheme.TextView.Medium"
            android:layout_centerInParent="true"
            android:text="@string/add_new_customer"
            android:textSize="@dimen/text_size_14" />

        <ImageButton
            android:id="@+id/btClose"
            style="@style/AppTheme.ImageButton"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_menu_close"
            app:tint="@color/black" />
    </RelativeLayout>

    <View style="@style/AppTheme.Line.Horizontal"
        android:layout_marginHorizontal="@dimen/size_10"/>

    <EditText
        android:id="@+id/etPhone"
        style="@style/AppTheme.EditText"
        android:layout_marginTop="@dimen/size_10"
        android:drawableStart="@drawable/ic_phone_outline"
        android:hint="@string/hint_enter_phone_number"
        android:inputType="phone"
        android:maxLength="14" />

    <EditText
        android:id="@+id/etFullName"
        style="@style/AppTheme.EditText"
        android:layout_marginTop="@dimen/size_12"
        android:drawableStart="@drawable/ic_user_outline"
        android:hint="@string/hint_enter_full_name"
        android:maxLength="50" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSubmit"
        style="@style/AppTheme.ButtonDefault"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/button_primary_corner"
        android:text="@string/btn_submit" />

</androidx.appcompat.widget.LinearLayoutCompat>

